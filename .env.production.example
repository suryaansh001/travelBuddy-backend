# Server
NODE_ENV=production
PORT=3000

# Database (Use your cloud PostgreSQL URL)
DATABASE_URL="postgresql://user:password@host:5432/campusbuddy?schema=public"

# Redis (Use your cloud Redis URL)
REDIS_URL="redis://username:password@host:6379"

# JWT (IMPORTANT: Generate strong random secrets for production!)
# Use: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_STRONG_32_CHAR_SECRET"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_ANOTHER_STRONG_32_CHAR_SECRET"
JWT_REFRESH_EXPIRES_IN="30d"

# CORS (Your frontend domain)
CORS_ORIGIN="https://yourdomain.com"

# Email (Production SMTP settings)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Admin
ADMIN_EMAIL="admin@yourdomain.com"
