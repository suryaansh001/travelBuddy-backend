# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/campusbuddy?schema=public"

# Redis
# Redis Configuration
# Option 1: URL format
REDIS_URL=redis://localhost:6379

# Option 2: Individual config (for Redis Labs)
# REDIS_USERNAME=default
# REDIS_PASSWORD=your-password
# REDIS_HOST=redis-xxxxx.cloud.redislabs.com
# REDIS_PORT=16515

# JWT - Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars"
JWT_REFRESH_EXPIRES_IN="30d"

# CORS
CORS_ORIGIN="http://localhost:5173"

# Email (optional for local dev)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="noreply@campusbuddy.com"
